@using Hdf5Viewer.Shared

<ul class="treeview">
    @if (Nodes != null)
    {
        @foreach (var node in Nodes)
        {
            <RenderTreeNode Node="node" NodeSelected="@NodeSelected" ToggleNode="@ToggleNode" /> 
        }
    }
</ul>

@code {
    [Parameter]
    public List<Hdf5TreeNode> Nodes { get; set; } = new List<Hdf5TreeNode>();

    [Parameter]
    public EventCallback<Hdf5TreeNode> NodeSelected { get; set; }

    [Parameter]
    public EventCallback<Hdf5TreeNode> ToggleNode { get; set; }

    private async Task SelectNode(Hdf5TreeNode node)
    {
        await NodeSelected.InvokeAsync(node);
    }
}